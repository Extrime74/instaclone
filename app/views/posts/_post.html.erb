<div id="<%= dom_id post %>" class="post-container">
  <p>
  <%= link_to post.user.email, post.user %>
  </p>
  <%= image_tag(post.image, style: "object-fit: contain; width: 500px; height: 500px;") %>
  <p>
    <%= post.description %>
  </p>
  <p>
  <%#= link_to "", post, class:"post-link" %>
  </p>
  <% if user_signed_in? %>
    <% like = current_user.likes.find_by(post: post) %>
    <% if like.nil? %>
      <%= button_to "Like", likes_path, params: { like: { post_id: post.id}}, method: :post%>
    <% else %>
      <%= button_to "Unlike", like_path(like), method: :delete %>
    <% end %>
  <% end %>
  <p>
  <%= post.likes.count%> Likes
  </p>
</div>
