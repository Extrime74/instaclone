<div id="posts" class="text-center">
  <%= stylesheet_link_tag("post")%>
  <br>
  <p style="color: green"><%= notice %></p>
  <br>
  <%= render @post %>
  <%= link_to "Back to posts", posts_path %>
  <% if user_signed_in? %>
    <% if current_user.id == @post.user.id %>
    <div>
      <%= link_to "Edit this post", edit_post_path(@post) %> |
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-primary" %>
    </div>
    <% end %>
    <br>
    <%= render "comments/form", comment: @comment %>
    <%- @post.comments.each do |comment|%>
      <%= "#{comment.post.user.email} #{comment.text}" if comment.text.present? %>
      <% if comment.user && current_user.id == comment.user.id %>
        <%= button_to "Delete comment", comment, method: :delete, class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>  
</div>
