<div class="text-center">
  <div>
  <p style="color: green"><%= notice %></p>
  <p style="color: red"><%= alert %></p>
  <div>

<%= render @post %>
<div class= buttons-container>
  <%= link_to "Back ", posts_path, class: "btn btn-primary" %>
  <% if user_signed_in? %>
    <% if current_user.id == @post.user.id %>
      <div class="ml-2">
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>

      </div>
      <div class="ml-2">
        <%= button_to "Delete", @post, method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
</div>
<br>

<%= turbo_frame_tag dom_id(@post, :comment) do %>
  <% @post.comments.each do |comment| %>
    <div class="comment-container">
      <div class="comment-text">
        <%= "#{link_to(comment.user.email, user_path(comment.user))}: #{comment.text}".html_safe if comment.text.present?%>
      </div>
      <% if comment.user && current_user.id == comment.user.id %>
        <div class="delete-button">
          <%= button_to "ðŸ—‘ï¸", comment, method: :delete, class: "btn btn-primary btn-light" %>
        </div>
      <% end %>
    </div>
    <% end %>
      <p style="color: red"><%= alert %></p>
  <%= render "comments/form", comment: @comment %>
  <% end %> 
<% end %> 
</div>
