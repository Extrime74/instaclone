<!DOCTYPE html>
<html>
<head>
  <script>
    function autoResize(textarea) {
      textarea.style.height = "auto";
      textarea.style.height = (textarea.scrollHeight) + "px";
    }
  </script>
</head>

<body>
  <div class="col-xl-4 col-md-6 col-sm-8 col-10" style="margin: auto; ">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.text_field :user_id, type: "hidden", value: current_user.id %> 
    </div>

    <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
    </div>

    <br>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, style: "width: 100%;", oninput: "autoResize(this)" %>
    </div>

    <br>

    <div>
      <%= form.submit class: "btn btn-primary col-12" %>
    </div>
  <% end %>
  </div>
  </body>
  </html>
